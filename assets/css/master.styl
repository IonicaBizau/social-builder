@import '_settings'
@import '_variables'
@import '_type'
@import '_networks'
@import '_select_networks'
@import '_style_select'
@import '_code_areas'

reset()
base()

html, body
  height:     100%
  min-width:  770px

body
  margin: 0;
  background-color: #eceff5

.section
  float: left;
  height: 100%;

.half
  width: 50%;

:not(pre) > code[class*="language-"],
pre[class*="language-"] {
  background: none;
}

code[class*="language-"],
pre[class*="language-"] {
  text-shadow: none;
}
ul
  margin: 0;
  padding: 0;
  li
    list-style-type: none
    display: inline-block;

.top-band
  top: 0
  position: absolute
  width: 50%
  margin: 0
  padding: 0

.stripe
  height: 5px
  display: block
  float: left
  width: 25%
  list-style-type: none

.center
  margin: 30px auto 0 auto
  width: 370px

.step-section
  margin: 10px 0 30px 0

input, textarea
  color: slate-grey
  padding: 0 10px;
  font-size: 16px;
  border-radius: border-radius-lg
  border: border-size solid #a4a7b0
  outline: none
  font-size 14px
  width: 100%
  border-box: box-sizing

input
  height: 46px

textarea
  font-size: 18px
  line-height: 24px
  padding: 10px 20px
  height: 100px
