@import '_share_styles';

.display-style
  filter: grayscale(100%)
  background-color: white
  border-radius: border-radius-lg
  border: border-size solid transparent
  list-style-type: none
  height: 90px
  width: 100%
  margin-bottom: 15px
  opacity: 0.5
  transition: all 200ms ease-in
  &.selected
    filter: grayscale(0%)
    opacity: 1
    border-color: green
  &:hover
    filter: grayscale(0%)
    opacity: 1
    cursor: pointer
    border-color: green
