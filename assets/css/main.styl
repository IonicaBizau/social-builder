global-reset()

.app-center
  width: 500px
  margin: 0 auto
  text-align: center

.section
  display: inline-block;

.half
  width: 50%;

pre.prettyprint
  margin: 0

.network
  width: 50px
  height: 50px
  margin: 0 10px
  cursor: pointer
  display: inline-block
  background: lightgray
  border-radius: 10px

  &.active
    background: green

.display-style
  margin: 10px
  padding: 10px
  border-radius: 10px

  &.selected
    border: solid 1px green

.section
  margin-top: 20px

textarea.over
  color: red
